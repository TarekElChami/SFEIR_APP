<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sfeirapp.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_piramid_48"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        
        <activity
            android:name="org.sfeirapp.app.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="org.sfeirapp.app.ListeMonumentsActivity"
            android:label="@string/title_activity_liste_monuments" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.sfeirapp.app.AjouterMonumentActivity"
            android:label="@string/title_activity_ajouter_monument" >
        </activity>
        <activity
            android:name="org.sfeirapp.app.DetailsMonumentActivity"
            android:label="@string/title_activity_details_monument" >
        </activity>
    </application>

</manifest>
